<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dict_manager_top_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dict_manager_hint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

	<ListView
	    android:id="@+id/dict_list"
    	android:layout_width="fill_parent"
    	android:layout_height="0dip"
    	android:layout_weight="1"
    	android:footerDividersEnabled="true"
    	android:choiceMode="multipleChoice">
	</ListView>

	<LinearLayout
	    android:id="@+id/dict_manager_btns_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:paddingBottom="10dp" >

		<Button
		    android:id="@+id/btn_select_all_dicts"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/select_all"
		    android:onClick="onSelectAllDicts" />

		<Button
		    android:id="@+id/btn_unselect_all_dicts"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/unselect_all"
		    android:onClick="onUnselectAllDicts" />

		<!-- <Button
		    android:id="@+id/btn_enable_dicts"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/save"
		    android:onClick="onEnableDicts" />-->

	</LinearLayout>

</LinearLayout>
